doctype
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='description', content='')
    meta(name='author', content='jm3')
    title d3 waveform

    // build:css stylesheets/app.min.css
    //- the build directives will cause these to be bundled into one file
    link(rel="stylesheet",type="text/css",href="stylesheets/fonts.css")
    link(rel="stylesheet",type="text/css",href="stylesheets/base.css")
    link(rel="stylesheet",type="text/css",href="stylesheets/waveform.css")
    // endbuild

  body
    .page
      h1 
        | d3.waveform &middot; 
        a(href="http://www.jm3.net/") john manoogian III
        img(src="images/reference.png", width="960", height="240")
      .waveform
        h6 render as div
        div
          .axis
        h6 render as SVG

      ul.nav
        li
          img(src="https://github.com/favicon.ico", width="20")
          a(href="https://github.com/jm3/d3.unconf") source code
        li
          a(href="http://d3js.org/") d3 docs

    // build:js(source/) javascripts/app.min.js
    script(src='vendor/jquery/jquery-1.10.2.min.js')
