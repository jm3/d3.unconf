doctype
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='description', content='')
    meta(name='author', content='jm3')
    title d3 swimmo

    // build:css stylesheets/app.min.css
    //- the build directives will cause these to be bundled into one file
    link(rel="stylesheet",type="text/css",href="http://fonts.googleapis.com/css?family=Roboto:400,100|Amatic+SC")
    link(rel="stylesheet",type="text/css",href="stylesheets/base.css")
    link(rel="stylesheet",type="text/css",href="stylesheets/swim.css")
    // endbuild

  body
    include menu.jade
    .page
      h1 simple swim chart test in d3
      h2 bar chart of race standings
      .charts
        .chart.swim

      ul.nav
        li
          a(href="http://github.com/jm3/d3swimmo") source code
        li
          a(href="http://d3js.org/") d3 docs

    // build:js(source/) javascripts/app.min.js
    script(src='vendor/jquery/jquery-1.10.2.min.js')
    script(src='vendor/d3/d3.min.js')
    script(src="vendor/d3/queue.v1.min.js")
    script(src="javascripts/utils.js")
    script(src="javascripts/swim.js")
    // endbuild

